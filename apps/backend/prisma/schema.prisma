datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())    // faster when integer
  name        String?
  username    String?  @unique
  email       String   @unique
  password    String
  avatarURL   String?
  createdAt   DateTime @default(now())
}