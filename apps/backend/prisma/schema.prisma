datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())    // faster when integer
  email     String   @unique
  name      String?
  username  String?  @unique
  password  String
  createdAt DateTime @default(now())
}